@page "/help"
@model WiredBrainCoffeeAdmin.Pages.HelpModel
@{
}

<h1 class="h2">Request Help</h1>
<hr />

@if (!string.IsNullOrWhiteSpace(Model.ResponseMessage))
{
    <p class="alert alert-info">@Model.ResponseMessage</p>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Request Help
            </div>
            <div class="card-body">
                <h5 class="card-title">Contact out IT Team</h5>
                <p class="card-text">Having an issue with the site? Let us know!</p>
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="NewTicket.Title" class="form-label">Title</label>
                        <input asp-for="NewTicket.Title" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewTicket.Description" class="form-label">Description</label>
                        <textarea asp-for="NewTicket.Description" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h2>Current Issues</h2>
        <hr />
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.HelpTickets)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>