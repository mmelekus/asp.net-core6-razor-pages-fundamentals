@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid dashboard">
    <h1 class="h2">Welcome to Wired Brain Coffee!</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h2>Latest Products</h2>
            <vc:product-list count="4" />
            <h2>Latest Survey Results</h2>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Question</th>
                        <th>Answer</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var item in Model.SurveyResults)
                {
                    <tr>
                        <td>@item.Question</td>
                        <td>@item.Answer</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <div class="card-header">
                The Basics
            </div>
            <div class="card-body">
                <p>Hello, today is @DateTime.Today.Date.ToString("MM/dd/yyyy").</p>
                @{
                    var temperature = 55;
                }
                <p>The current temperature is @temperature degrees.</p>
                @if(temperature < 60)
                {
                    <p>We recommend a coat unti it warms up @(60 - temperature) degrees.
                    </p>
                }
            </div>
            <partial name="HelpWidget" />
            <h2>Weekly Order Stats</h2>
            <table class="table table-bordered table-striped">
                @foreach(var item in Model.OrderStats)
                {
                    <tr>
                        <td>@item.Key</td>
                        <td>@item.Value</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>