@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid dashboard">
    <h1 class="h2">Welcome to Wired Brain Coffee!</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h2>Latest Products</h2>
            @await Component.InvokeAsync("ProductList", new { itemCount = 5 })

            <h2>Latest Survey Results</h2>
            <table class="table table-striped table-bordered">
                @foreach(var item in Model.SurveyItems)
                {
                    <tr>
                        <td>@item.Question</td>
                        <td>@item.Answer</td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-6">
            @Html.Partial("Info")

            <div class="card">
              <div class="card-header">
                Weekly Fun facts
              </div>
              <ul class="list-group list-group-flush list-group-striped">
                <li class="list-group-item">Cups of Coffee Sold: 2500</li>
                <li class="list-group-item">Total Revenue: $25,000</li>
                <li class="list-group-item">Customers Served: 1800</li>
                <li class="list-group-item">One Day Sales Record: $5000</li>
              </ul>
            </div>

            <div class="card">
            <div class="card-header">
                Request Help
            </div>
            <div class="card-body">
                <h5 class="card-title">Contact our IT Team</h5>
                <p class="card-text">Having an issue with the site? Let us know!</p>
                <a asp-page="help" class="btn btn-success">Request Help</a>
            </div>
        </div>
        </div>
    </div>
</div>